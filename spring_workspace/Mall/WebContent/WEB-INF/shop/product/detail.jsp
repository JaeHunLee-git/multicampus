				"ea" : $("input[name='ea']").val()
			}, 
			success:function(result, status, xhr){ //서버에서 요청 처리를 성공했을때 호출되는 익명함수
				alert("장바구니에 담았습니다");
			}, 
			error:function(xhr, status, err){ //서버에서 요청 처리를 실패했을때 호출되는 익명함수
				alert("장바구니 담기 실패 ㅜㅜ");
			}
		});
		
	}
	
	function addCart(product_idx){
		if(confirm(product_idx+" 상품을 장바구니에 담을까요?")){
			regist(product_idx);
		}		
	}

</script>

